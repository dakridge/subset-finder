@import '~assets/stylus/theme';

.Main
    display inline-block

    .Spinner
        position absolute
        box-sizing: border-box
        top: 0; left: 0;
        border-width: 4px;
        border-style: solid;
        border-color: colorMain rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1);
        border-radius: 500px;

        animation: spin 500ms infinite linear;

.SpinnerPage
    position: fixed;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background-color: #fff;
    z-index 101;

    .SpinnerContainer
        position: absolute;
        top: 50%; left: 50%;

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}